{
  "name": "normandpllc-site",
  "version": "1.0.0",
  "description": "Normand PLLC Law Firm Website",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "dev:vercel": "vercel dev --listen 7002",
    "start": "node server.js",
    "deploy": "vercel --prod",
    "prebuild": "npm run translate:check",
    "build": "npm run translate:validate && echo 'Build complete with translation validation'",
    "menu:watch": "node scripts/menu-watcher.js",
    "menu:check": "node scripts/menu-watcher.js check",
    "menu:sync": "node scripts/menu-watcher.js sync",
    "translate:check": "node scripts/validate-translations.js",
    "translate:validate": "node scripts/validate-translations.js --fail-critical",
    "translate:report": "node scripts/validate-translations.js --warn-all --verbose",
    "translate:audit": "node scripts/validate-translations.js --verbose && echo 'Translation audit complete'",
    "translate:create-critical": "node scripts/translation-helpers.js create-critical",
    "translate:create-templates": "node scripts/translation-helpers.js create-templates",
    "translate:helpers-audit": "node scripts/translation-helpers.js audit",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:menu": "playwright test tests/menu-sync.test.js",
    "test:ci": "playwright test --reporter=github",
    "test:translations": "npm run translate:validate && npm run test",
    "qa:full": "npm run translate:report && npm run test && echo 'Full QA complete'"
  },
  "dependencies": {
    "@vercel/node": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cheerio": "^1.1.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "playwright": "^1.55.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "vercel": "^32.0.0"
  }
}
